<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <AssemblyName>DragonFruit.Six.Api</AssemblyName>
        <RootNamespace>DragonFruit.Six.Api</RootNamespace>
        <!--must be left for legacy reasons-->
        <PackageId>Dragon6.API</PackageId>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <PackageTitle>Dragon6 Api</PackageTitle>
        <PackageDescription>A Rainbow Six Stats API for .NET</PackageDescription>
        <PackageSummary>A Rainbow Six Stats API</PackageSummary>
        <PackageIcon>icon.png</PackageIcon>
        <PackageProjectUrl>https://github.com/dragonfruitnetwork/dragon6-api</PackageProjectUrl>
        <RepositoryUrl>https://github.com/dragonfruitnetwork/dragon6-api</RepositoryUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RepositoryType>Git</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <PackageTags>r6stats, r6api, r6, rainbowsix</PackageTags>
        <Authors>DragonFruit Network</Authors>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\res\icon.png">
            <Pack>true</Pack>
            <PackagePath>.</PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DragonFruit.Data" Version="2021.1218.0" />
        <PackageReference Include="DragonFruit.Data.Serializers.Newtonsoft" Version="2021.1218.0" />
    </ItemGroup>

</Project>
